<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Markers">

        <EditTextPreference
            app:key="marker"
            app:title="Marker Limit"
            app:defaultValue="100"
            app:summary="100"
            app:useSimpleSummaryProvider="true"
           />

    </PreferenceCategory>
    <PreferenceCategory app:title="Route">

        <EditTextPreference
            app:key="tolerance"
            app:title="Route deviation tolerance"
            app:defaultValue="5"
            app:useSimpleSummaryProvider="true"
            />

    </PreferenceCategory>


</PreferenceScreen>